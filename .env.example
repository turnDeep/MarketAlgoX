# FMP API Key
# Get your API key from https://financialmodelingprep.com/developer/docs/
FMP_API_KEY=your_fmp_api_key_here

# FMP API Rate Limit (requests per minute)
# Starter Plan: 300, Premium Plan: 750, Professional Plan: 1500
FMP_RATE_LIMIT=750

# FMP API Mode
# Set to "true" to use local FMP API server (from database)
# Set to "false" to use official FMP API
FMP_USE_LOCAL=false

# Local FMP API URL (used when FMP_USE_LOCAL=true)
FMP_LOCAL_URL=http://fmp_api:8000/api/v3

# Local FMP API Key (for accessing local API server)
# Generate using: /admin/api-key/create endpoint
FMP_LOCAL_API_KEY=your_local_fmp_api_key_here

# OpenAI API Key
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model
# Available models: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4.1

# X (Twitter) API Keys
# Get your API keys from https://developer.twitter.com/
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# Oratnek Screener Settings
# Maximum number of parallel workers for data fetching
# Recommended: 3 (Starter Plan 300 req/min), 6 (Premium Plan 750 req/min), 10+ (Professional Plan 1500 req/min)
ORATNEK_MAX_WORKERS=6

# Batch size for processing tickers
ORATNEK_BATCH_SIZE=50

# Google Sheets Configuration
CREDENTIALS_FILE=credentials.json
SPREADSHEET_NAME=Market Dashboard

# IBD Screeners Database
IBD_DB_PATH=./data/ibd_data.db

# Optional: Python environment settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
